<UserControl x:Class="SturmProjekt.Views.AddRechnungView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="300">
    <Grid>
            <StackPanel>
            <Button Command="{Binding OpenFileCommand}" Content="Choose File"></Button>
            <Button Command="{Binding DeletePageCommand}" Content="Delete File"></Button>
            <Button Command="{Binding ConfirmCommand}" Content="Rechnung bestätigen"></Button>
            <Label Content="Rechnungsname" Target="{Binding ElementName=Rechnungsname}"></Label>
            <TextBox Name="Rechnungsname"  Text="{Binding RechnungsName, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <TextBlock Text="{Binding PictureCount}"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
